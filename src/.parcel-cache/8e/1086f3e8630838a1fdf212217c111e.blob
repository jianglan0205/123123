* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
*::after,
*::after {
  box-sizing: border-box;
}
.tou {
  position: relative;
}

.nose {
  position: relative;
  width: 36px;
  height: 32px;
  left: 50%;
  top: 200px;
  margin-left: -18px;
  border-radius: 50%;
  background-color: rgb(147, 91, 69);
  z-index: 3;
}

.eye {
  position: absolute;
  width: 16px;
  height: 10px;
  left: 50%;
  top: 180px;
  margin-left: -8px;
  z-index: 2;
}
.eye.left {
  background-color: rgb(87, 86, 92);
  transform: translateX(50px) rotate(90deg);
  border-radius: 45%;
}
.eye-right {
  background-color: rgb(87, 86, 92);
  transform: translateX(-50px) rotate(90deg);
  border-radius: 45%;
}
.yuan {
  background-color: rgb(221, 159, 128);
  position: absolute;
  width: 200px;
  height: 200px;
  left: 50%;
  top: 100px;
  margin-left: -100px;
  border-radius: 50%;
  z-index: 1;
}
.ear {
  border: 1px solid black;
  background-color: rgb(198, 141, 109);
  position: absolute;
  width: 65px;
  height: 65px;
  left: 50%;
  top: 90px;
}
.ear.left {
  transform: translateX(50px);
}
