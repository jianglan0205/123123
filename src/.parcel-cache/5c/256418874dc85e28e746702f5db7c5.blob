* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
*::after,
*::after {
  box-sizing: border-box;
}
.tou {
  position: relative;
}

.nose {
  position: relative;
  width: 36px;
  height: 32px;
  left: 50%;
  top: 200px;
  margin-left: -18px;
  border-radius: 50%;
  background-color: rgb(147, 91, 69);
}

.eye {
  border: 1px solid rgb(87, 86, 92);
  position: absolute;
  width: 16px;
  height: 10px;
  left: 50%;
  top: 180px;
  margin-left: -8px;
}
.left {
  background-color: rgb(87, 86, 92);
  transform: translateX(50px) rotate(90deg);
  border-radius: 45%;
}
.right {
  background-color: rgb(87, 86, 92);
  transform: translateX(-50px) rotate(90deg);
  border-radius: 45%;
}
.yuan {
  border: 1px solid red;
  position: absolute;
  width: 200px;
  height: 200px;
  left: 50%;
  top: 100px;
  margin-left: -100px;
  border-radius: 50%;
}
